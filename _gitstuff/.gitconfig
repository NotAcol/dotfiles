[user]
	email = your mail
	name = your username
[init]
	defaultBranch = main
[include]
    path = ~/dotfiles/_gitstuff/themes.gitconfig
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    features = catppuccin-mocha
    line-numbers = true
    hyperlinks = true
    side-by-side = true
    true-color = always
[merge]
    conflictstyle = zdiff3
